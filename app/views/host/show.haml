%h2= "Host: #{h(@record.name)}"

%table.list
  %tr
    %th Name
    %th Revision
    %th Time
    %th Operations
  - @test_runs.each do |t|
    %tr
      %td= h(t.name)
      %td= h(t.revision)
      %td= h(t.occured_at)
      %td
        %ul.actions
          %li= link_for(t, :label => "Show")
          = test_run_delete_link(t)
= render(:partial => '/common/pagination', :locals => {:record_pages => @test_run_pages})
