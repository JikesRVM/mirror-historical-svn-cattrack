- @content_for_breadcrumbs = draw_breadcrumbs(@record.parent_node)
- @page_title = "Test Run: #{h(@record.name)}.#{@record.id}"
%h1.page-title= @page_title

%table.details
  %tr
    %th Target
    %td= link_for(@record.build_target)
  %tr
    %th Revision
    %td= revision_link(@record.revision)
  %tr
    %th Time
    %td= h(@record.occurred_at)
  %tr
    %th Success Rate
    %td= @record.success_rate
  %tr
    %th Import Date
    %td= @record.created_at
%ul.actions
  %li= link_for(@record, :label => 'Show Summary', :action => 'show_summary')
  %li= link_for(@record, :label => 'Show Report', :controller => '/reports/test_run_by_revision_report')
.clearer
%h3 Build Runs
%table.list
  %tr
    %th Build
    %th Result
    %th Operations
  - @record.build_configurations.each do |bc|
    %tr
      %td= h(bc.label)
      %td= h(bc.result)
      %td= link_for(bc, :label => 'Show')

%h3 Test Configurations
%table.list
  %tr
    %th Build Configuration
    %th Name
    %th Success Rate
    %th Operations
  - @record.build_configurations.each do |bc|
    - bc.test_configurations.each do |tc|
      %tr
        %td= link_for(bc)
        %td= h(tc.label)
        %td= tc.success_rate
        %td= link_for(tc, :label => 'Show')
