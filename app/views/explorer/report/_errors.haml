- if (@report.errors and @report.errors.count > 0)
  .form_messages
    %h4
      = pluralize(@report.errors.count, 'error')
      with the report.
    - if @report.errors[:base]
      - errors = @report.errors[:base]
      - errors = errors.is_a?(Array) ? errors : [errors]
      %ul
        - errors.each do |e|
          %li= h(e)
