# config file to be put in /etc/logrotate.d

/home/cattrack/cattrack/shared/log/mongrel.*.log {
  missingok
  copytruncate
  daily
  rotate 5
}

/home/cattrack/cattrack/shared/log/importer.log {
  missingok
  copytruncate
  daily
  rotate 5
}

/home/cattrack/cattrack/shared/log/production.log {
  missingok
  copytruncate
  daily
  rotate 5
  compress
  delaycompress
}
